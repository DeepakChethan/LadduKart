<div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" href="#">
                  <h2>Laddukart</h2>
                </a>
              </li>
              <hr>
              <li class="nav-item">
                <a class="nav-link" href="#orders">
                  <span data-feather="file"></span>
                  Orders
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#laddus">
                  <span data-feather="shopping-cart"></span>
                  Laddus
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#users">
                  <span data-feather="users"></span>
                  Customers
                </a>
              </li>
              <hr>
              <li class="nav-item">
                <a class="nav-link" href="/admin/addLaddu" data-toggle="modal" data-target="#addLadduModal">
                  </span>
                  Add Laddu
                </a>
              </li>
              
            
              <hr>
              <li class="nav-item text-nowrap">
          <a class="nav-link" href="/admin/logout">Sign out</a>
              </li>
            </ul>
          </div>
        </nav>

        <div class="modal" id="addLadduModal">
              <div class="modal-dialog">
                <div class="modal-content">

                  <div class="modal-header">
                    <h4 class="modal-title">Add Laddu</h4>
                    <button type="button" class="close" data-dismiss="modal" >&times;</button>
                  </div>

                  <div class="modal-body">
                    <form method="POST" action="/admin/addLaddu" encType="multipart/form-data">
                       <div class="form-group">
                        <label for="ladduNameInput">Laddu Name</label>
                        <input type="text" class="form-control" id="ladduNameInput" name="ladduNameInput">
                      </div>
                      <div class="form-group">
                        <label for="LadduImage">Laddu Image</label>
                        <input type="file" class="form-control-file" name="imageInput" id="LadduImage">
                     </div>
                     <div class="form-group">
                        <label for="recipy">Ingredients</label>
                        <textarea class="form-control" id="ingredients" rows="2" name="ingredientsInput"></textarea>
                     </div>
                     <div class="form-group">
                        <label for="recipy">Recipy</label>
                        <textarea class="form-control" id="recipy" rows="3" name="recipyInput"></textarea>
                     </div>

                     <div class="form-group">
                        <label for="recipy">Price</label>
                        <input type="text" class="form-control" id="price" name="priceInput"></input>
                     </div>
                       <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                     <button type="submit" class="btn btn-lg btn-success" name="submit">Add</button>     
                    
                      </form>
                  </div>

                  <div class="modal-footer">
                    
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                  </div>

                  </div>
                </div>
              </div>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <h1>Dashboard</h1>
          <hr>
          <div id="orders"> 
            {{> orders }}
          </div>
          <hr>
          <div id="laddus" style="padding-top:2rem">
            {{> laddus}}
          </div>
          <hr>
          <div id="users" style="padding-top:2rem">
            {{> users}}
          </div>

        </main>
      </div>
    </div>

